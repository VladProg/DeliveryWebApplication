@model IEnumerable<DeliveryWebApplication.User>

<h2>Список користувачів</h2>
<table class="table">
    <tr>
        <th>Ім'я</th>
        <th>Телефон</th>
        <th>E-mail</th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.PhoneNumber</td>
            <td>@user.Email</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Права доступу</a>
            </td>
        </tr>
    }
</table>
