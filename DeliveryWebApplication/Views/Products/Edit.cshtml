@model DeliveryWebApplication.Controllers.ProductsController.CreateInfo

@{
    ViewData["Title"] = "Редагувати продукт";
}

<h1>Edit</h1>

<style>
    tbody tr:hover
    {
        background: #ffffff; /* Цвет фона при наведении */
    }
</style>

<table style="width:100%"> <tr>
    <td>
        <h4>Редагувати продукт</h4>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Product.Weight" class="control-label"></label> в грамах (для товарів, що продаються поштучно)
                <input asp-for="Product.Weight" class="form-control" />
                <span asp-validation-for="Product.Weight" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Product.TrademarkId" class="control-label"></label>
                <select asp-for="Product.TrademarkId" class ="form-control" asp-items="ViewBag.TrademarkId"><option/></select>
                <span asp-validation-for="Product.TrademarkId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"><option/></select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Product.CountryId" class="control-label"></label>
                <select asp-for="Product.CountryId" class="form-control" asp-items="ViewBag.CountryId"><option/></select>
                <span asp-validation-for="Product.CountryId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </td>
    <td/><td/><td/><td/><td/><td/>
    <td/><td/><td/><td/><td/><td/>
    <td class="with-border"/>
    <td/><td/><td/><td/><td/><td/>
    <td/><td/><td/><td/><td/><td/>
    <td>
        <h4>Створити торгову марку</h4>
        <form asp-action="EditTrademark" asp-route-id="@Model.Product.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Trademark.Name" class="form-control" />
                <span asp-validation-for="Trademark.Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
        <hr />
        <h4>Створити категорію</h4>
        <form asp-action="EditCategory" asp-route-id="@Model.Product.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </td>
</tr> </table>
<br/><br/><br/>
<div>
    <a asp-action="Details" asp-route-id="@Model.Product.Id">Повернутися до продукта</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
